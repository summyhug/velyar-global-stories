{
  "name": "story-camera",
  "version": "1.0.0",
  "description": "Custom Instagram/TikTok-style in-app video recorder for Capacitor applications",
  "main": "index.ts",
  "types": "index.ts",
  "exports": {
    ".": {
      "import": "./index.ts",
      "require": "./index.ts"
    }
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native",
    "camera",
    "video",
    "recording",
    "story",
    "instagram",
    "tiktok"
  ],
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/velyar/story-camera-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/velyar/story-camera-plugin/issues"
  },
  "homepage": "https://github.com/velyar/story-camera-plugin#readme",
  "author": "Velyar Team",
  "license": "MIT",
  "dependencies": {
    "@capacitor/core": "^7.4.2"
  },
  "devDependencies": {
    "@capacitor/android": "^7.4.2",
    "@capacitor/ios": "^7.4.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.5",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "eslint": "^9.9.0",
    "jest": "^29.7.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.1.2",
    "typescript": "^5.5.3"
  },
  "files": [
    "dist/",
    "ios/",
    "android/"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/test/**"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/explicit-function-return-type": "warn",
      "@typescript-eslint/no-explicit-any": "warn"
    }
  }
}
